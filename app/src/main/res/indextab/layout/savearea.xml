<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_label_your_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="保存地块"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:background="@drawable/top_bar"/>

    <EditText
        android:id="@+id/savearea_fieldname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_label_your_name"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:hint="地块名称"/>
    <TextView
        android:id="@+id/savearea_Cropkinds_label"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="选择作物种类"

        android:textSize="15sp"
        android:layout_below="@id/savearea_fieldname"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/savearea_Cropkinds"
        android:layout_below="@+id/savearea_Cropkinds_label"
        android:gravity="center_horizontal"
        >

        <CheckBox
            android:id="@+id/savearea_Cropkinds_corn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玉米"

            />
        <CheckBox
            android:id="@+id/savearea_Cropkinds_wheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小麦"
            />
        <CheckBox
            android:id="@+id/savearea_Cropkinds_rice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水稻"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/savearea_Cropkinds"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/savearea_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/saveareabuttonseletor"
            android:text="取消" />
        <Button
            android:id="@+id/savearea_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/saveareabuttonseletor"
            android:layout_marginLeft="5dp"
            android:text="确定" />
    </LinearLayout>

</RelativeLayout>